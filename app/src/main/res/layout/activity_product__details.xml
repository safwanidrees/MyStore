<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_alignParentTop="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Product_Details"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="3dp"
    >
    <ScrollView
        android:layout_above="@+id/addtocart"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stackFromBottom="true"


    android:orientation="vertical"
    >

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >



    <ImageView
        android:background="@drawable/border"
        android:id="@+id/brandimage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:elevation="12dp"

        app:srcCompat="@drawable/shirt" >

    </ImageView>

        <ImageButton
            android:layout_margin="8dp"

            android:id="@+id/backtohomes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backaddtocart"
            android:src="@drawable/back2" />

    </RelativeLayout>


<!--    <View-->
<!--        android:padding="5dp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="2dp"-->
<!--        android:background="#c0c0c0"/>-->


    <LinearLayout

        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:elevation="10dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

    <TextView

       android:id="@+id/brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Levis Shirt "
android:textColor="#333335"
android:gravity="center"

        android:textSize="18sp"

        />
        <TextView
            android:maxLines="20"
            android:id="@+id/brand_descripition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asassasasassasasasssassassjdsasnanidress"
android:padding="5dp"

            android:textSize="15sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:textAlignment="center"

               android:gravity="center"
android:paddingLeft="5dp"
                android:layout_below="@+id/brand_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:paddingTop="5dp"
                android:textSize="18sp"

                />
            <ImageButton

                android:layout_gravity="center"
                android:id="@+id/quantity_minus"
                android:src="@drawable/minus"
                android:layout_marginLeft="28dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/backaddsub"/>
            <TextView
                android:id="@+id/quantity_text"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="1"
                android:textSize="25sp"/>

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/quantiy_add"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/add"
                android:background="@drawable/backaddsub"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView

            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="RATINGS"
            android:textSize="18sp"/>
<RatingBar
    android:id="@+id/rating_bar"
    android:layout_marginLeft="28dp"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    style = "?android:attr/ratingBarStyleSmall"
    android:layout_height="wrap_content"
    android:numStars="5"
   />
            <TextView
android:id="@+id/brandratingnumber"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="1.0"
                android:textSize="18sp"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs : "
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textColor="#000000"
                android:textSize="20sp"

                />
            <TextView

                android:id="@+id/brand_price"
                android:paddingLeft="40dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10000"
                android:paddingTop="5dp"
                android:textColor="#333335"
                android:textStyle="bold"
                android:textSize="20sp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs : "
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:textColor="#333335"
                android:textSize="20sp"

                />


        </RelativeLayout>


</LinearLayout>


</LinearLayout>


    </ScrollView>



    <Button
        android:layout_alignParentStart="true"
        android:id="@+id/addtocart"
        android:background="@drawable/addtocart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"

        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:elevation="10dp"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:paddingLeft="120dp"
        android:paddingRight="120dp"
        android:drawableLeft="@drawable/cart1"


        />

</RelativeLayout>